<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.felipenishino.sobala">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.SoBala">
        <activity android:name=".activities.PurchaseHistoryActivity"/>
        <activity android:name=".activities.AboutActivity"/>
        <activity android:name=".activities.CartActivity"/>
        <activity android:name=".activities.DetalheProdutoActivity"/>

        <activity android:name=".activities.ListProductsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>